<?xml version="1.0" encoding="utf-8"?>
<com.iamkamrul.layout.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:paddingHorizontal="@dimen/_8sdp"
    android:paddingVertical="@dimen/_3sdp"
    android:background="#ffffff"
    android:layout_marginHorizontal="@dimen/_25sdp"
    app:cl_background_shape="rectangle"
    app:cl_corner_radius="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iconIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_access_time_filled_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.iamkamrul.textview.TextViewRegular
        android:id="@+id/titleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:maxLines="1"
        android:paddingVertical="@dimen/_12sdp"
        android:textColor="#000000"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonTv"
        app:layout_constraintStart_toEndOf="@+id/iconIv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="When it happen" />

    <com.iamkamrul.textview.TextViewBold
        android:id="@+id/buttonTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:maxLines="1"
        android:text="Add"
        android:textSize="@dimen/_14sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:drawableEnd="@drawable/baseline_add_24"
        android:drawablePadding="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="@+id/titleTv"
        app:layout_constraintBottom_toBottomOf="@+id/titleTv"
        app:layout_constraintEnd_toEndOf="parent" />

</com.iamkamrul.layout.ConstraintLayout>